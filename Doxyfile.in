DOXYFILE_ENCODING      = UTF-8
PROJECT_NAME           = "@CMAKE_PROJECT_NAME@"
PROJECT_BRIEF          = "Simple échiquier pour jouer à deux"
OUTPUT_DIRECTORY       = @PROJECT_BINARY_DIR@/docs

STRIP_FROM_PATH        = @PROJECT_SOURCE_DIR@ \
                         @PROJECT_BINARY_DIR@

BUILTIN_STL_SUPPORT = YES

INPUT                  = @doxy_main_page@ \
                         @PROJECT_SOURCE_DIR@
INPUT_ENCODING         = UTF-8
RECURSIVE              = YES

# Add all the header and source file extensions used
FILE_PATTERNS = *.cpp *.hpp

TAB_SIZE = 8

EXTRACT_ALL          = YES
EXTRACT_STATIC       = YES
CLASS_DIAGRAMS       = YES
HIDE_UNDOC_RELATIONS = NO
HAVE_DOT             = YES
CLASS_GRAPH          = YES
COLLABORATION_GRAPH  = YES
UML_LOOK             = YES
UML_LIMIT_NUM_FIELDS = 500
TEMPLATE_RELATIONS   = YES
DOT_GRAPH_MAX_NODES  = 1000
MAX_DOT_GRAPH_DEPTH  = 0
DOT_TRANSPARENT      = YES
CALL_GRAPH           = YES
